<div class="container">
  
  <p id="notice"><%= notice %></p>

  <div class="caption"><h1>Listing Todos</h1></div>

  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Notes</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.title %></td>
        <td><%= todo.notes %></td>
        <td><%= link_to 'Show', todo, class: 'btn btn-success'  %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo), class: 'btn btn-danger' %></td>
        <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-success'  %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <%#= link_to 'New Todo', new_todo_path , class: 'btn btn-success' %>
  <%= link_to new_todo_path , class: 'btn btn-success' do %>
  <span class="glyphicon glyphicon-plus" aria-hidden="true"> New ToDo</span>
  <% end %>


  <!-- <button type="button" class="btn btn-inverse"><%= link_to 'New Todo', new_todo_path %></button> -->
</div>
